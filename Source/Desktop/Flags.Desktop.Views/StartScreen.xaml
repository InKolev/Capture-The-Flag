<Window x:Class="Flags.Desktop.Views.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flags.Desktop.Views"
        mc:Ignorable="d"
        Title="StartScreen" Height="240" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Capture the Flag"  TextAlignment="Center" FontSize="30" FontFamily="Segoe UI Light"/>
            <Separator  Height="20"/>
            <TextBlock  Text="Enter your name:" FontSize="20" TextAlignment="Center"/>
            <TextBox Height="30" Width="200" MinWidth="200" MaxWidth="200" Margin="10" Name="textBoxPlayerName"/>
            <Button Height="30" Content="Start" FontSize="20" Width="200" MinWidth="200" MaxWidth="200"
                    Click="StartGame"/>
        </StackPanel>
    </Grid>
</Window>
